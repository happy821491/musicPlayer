<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/f">     
        <shape>     
            <corners android:radius="10dip" />     
            <gradient android:startColor="#ffffffff"    
                
                android:centerColor="#ff000000" android:endColor="#ff808A87"    
                android:centerY="1" android:angle="270" />     
        </shape>     
    </item>     
    
    <item android:id="@+id/s">     
        <clip>     
            <shape>     
                <corners android:radius="10dip" />     
                <gradient android:startColor="#ffffffff"    
                    android:centerColor="#ffff0000" android:endColor="#ffAABD00"
                    android:centerY="1" android:angle="45" />     
            </shape>     
        </clip>     
    </item>   

</layer-list>
